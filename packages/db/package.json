{
  "name": "@video-ad-network/db",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/src/index.js"
    },
    "./*": "./dist/src/*"
  },
  "scripts": {
    "build": "tsc -b",
    "format": "prettier --experimental-cli --check .",
    "format:fix": "prettier --experimental-cli --write .",
    "typecheck": "tsc --noEmit",
    "validate": "run-p format typecheck",
    "db:generate": "kysely-codegen --camel-case --dialect sqlite --url ../../data/dev.db --out-file src/database-schema.ts",
    "db:diff": "atlas migrate diff --env local",
    "db:apply": "atlas migrate apply --env local",
    "db:apply:production": "dotenv -e ../../.env.production -- atlas migrate apply --env turso",
    "db:status": "atlas migrate status --env local",
    "db:status:production": "dotenv -e ../../.env.production -- atlas migrate status --env turso",
    "db:push": "atlas schema apply --env local --auto-approve",
    "db:reset": "rm -f ../../data/dev.db && atlas schema apply --env local --auto-approve && tsx seed.ts",
    "db:seed": "tsx seed.ts",
    "db:seed:production": "tsx seed.ts --production"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@cloudflare/workers-types": "catalog:",
    "@types/node": "catalog:",
    "dayjs": "catalog:",
    "dotenv": "catalog:",
    "kysely-codegen": "catalog:",
    "npm-run-all": "catalog:",
    "prettier": "catalog:",
    "prettier-plugin-organize-imports": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:",
    "zx": "catalog:"
  },
  "dependencies": {
    "@libsql/kysely-libsql": "catalog:",
    "@paralleldrive/cuid2": "3.0.4",
    "kysely": "catalog:"
  }
}
