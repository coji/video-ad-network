{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": [".env"],
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**"]
		},
		"dev": {
			"dependsOn": ["^dev"],
			"outputs": ["dist/**"],
			"cache": false,
			"persistent": true
		},
		"lint": {
			"dependsOn": ["^lint"],
			"cache": false
		},
		"format": {
			"dependsOn": ["^format"],
			"cache": false
		},
		"test": {
			"dependsOn": ["^test"],
			"cache": false
		}
	}
}
