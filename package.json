{
  "name": "video-ad-network",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "setup": "./scripts/setup-dev.sh",
    "dev": "concurrently -n db,apps -c blue,green \"pnpm run dev:db\" \"turbo dev\"",
    "dev:db": "turso dev --db-file ./data/dev.db",
    "dev:apps": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "format": "turbo format && prettier --experimental-cli --check .",
    "format:fix": "turbo format:fix && prettier --experimental-cli --write .",
    "test": "turbo test",
    "validate": "turbo validate",
    "deploy": "run-s deploy:*",
    "deploy:ad-server": "pnpm run --filter @video-ad-network/ad-server deploy",
    "deploy:ui": "pnpm run --filter @video-ad-network/ui deploy",
    "prisma": "pnpm --filter @video-ad-network/db exec prisma",
    "db:migrate": "pnpm --filter @video-ad-network/db exec prisma migrate dev",
    "db:reset": "pnpm --filter @video-ad-network/db exec prisma migrate reset",
    "db:generate": "pnpm --filter @video-ad-network/db exec prisma generate",
    "db:studio": "pnpm --filter @video-ad-network/db exec prisma studio",
    "auth:create-admin": "pnpm --filter @video-ad-network/ui run auth:create-admin"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@biomejs/biome": "catalog:",
    "@types/node": "catalog:",
    "cc-hooks-ts": "2.0.56",
    "concurrently": "catalog:",
    "npm-run-all": "catalog:",
    "prettier": "catalog:",
    "prettier-plugin-organize-imports": "catalog:",
    "tsx": "catalog:",
    "turbo": "catalog:"
  },
  "packageManager": "pnpm@10.24.0"
}
